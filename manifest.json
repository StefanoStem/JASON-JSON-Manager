{
  "manifest_version": 3,
  "name": "JASON (JSON Manager)",
  "version": "1.0.0",
  "description": "Quick sidebar for saving and managing JSON snippets",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open JASON"
  },
  "permissions": ["sidePanel", "storage"],
  "background": {
    "service_worker": "background.js"
  }
}
